<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs", {title: title}) %>

<body>
  <div class="container col-6 min-vh-100">
    <div class="blog-header">
      <h1>My Blog</h1>
      <a class="btn" id="new-post" href="/new">New Post</a>
    </div>
    <ul class="post-list">
      <% posts.forEach(post=> { %>
      <li class="post">
        <h2 class="post-title">
          <%=post.title%>
        </h2>
        <div class="post-info">
          By: <%=post.author%>, <%=post.date %>
        </div>
        <p class="post-content">
          <%=post.content%>
        </p>
        <a class="btn btn-sm" id="edit-post" href="/edit/<%= post.id %>">Edit</a>
        <a class="btn btn-sm" id="delete-post" href="/posts/delete/<%= post.id %>">Delete</a>
      </li>
      <% }); %>
    </ul>
  </div>
  <%- include("partials/footer.ejs") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>

</html>